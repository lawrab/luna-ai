# L.U.N.A. Configuration
# Copy this to .env and customize for your environment

# Application Settings
LUNA_DEBUG=false
LUNA_LOG_LEVEL=INFO
LUNA_DATA_DIR=~/.luna

# Audio Settings
LUNA_AUDIO_INPUT_DEVICE_INDEX=
LUNA_AUDIO_SAMPLE_RATE=16000
LUNA_AUDIO_CHUNK_SIZE=1024
LUNA_AUDIO_CHANNELS=1
LUNA_AUDIO_SILENCE_THRESHOLD=3000
LUNA_AUDIO_SILENCE_LIMIT_SECONDS=3
LUNA_AUDIO_WHISPER_MODEL=base.en

# LLM Settings
LUNA_LLM_MODEL_NAME=llama3
LUNA_LLM_BASE_URL=http://localhost:11434
LUNA_LLM_TIMEOUT_SECONDS=30
LUNA_LLM_MAX_RETRIES=3
LUNA_LLM_TEMPERATURE=0.7